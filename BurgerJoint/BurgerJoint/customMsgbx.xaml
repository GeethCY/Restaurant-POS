<Window x:Class="BurgerJoint.customMsgbx"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurgerJoint"
        mc:Ignorable="d"
        Title="customMsgbx" Height="150" Width="300" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Text="App Titel" Foreground="DimGray" FontSize="18"
                 VerticalAlignment="Center" FontWeight="Bold">
            
        </TextBlock>
    </Grid>
</Window>
